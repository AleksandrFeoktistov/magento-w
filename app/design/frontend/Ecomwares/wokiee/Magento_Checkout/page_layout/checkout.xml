<layout xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:noNamespaceSchemaLocation="urn:magento:framework:View/Layout/etc/page_layout.xsd">
    <update handle="empty"/>
    <referenceContainer name="main.content">
        <container name="main.content.indent" htmlTag="div" htmlClass="container-indent">
            <container name="main.content.container" htmlTag="div" htmlClass="container" />
        </container>
    </referenceContainer>

    <move element="columns.top" destination="main.content.container" before="-" />
    <move element="main" destination="main.content.container"/>
</layout>
