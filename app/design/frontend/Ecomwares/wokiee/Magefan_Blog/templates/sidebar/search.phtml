<div class="widget block blog-search" data-bind="scope: 'blog-search'">
    <div class="block-title">
        <strong><?php echo __('Search') ?></strong>
    </div>
    <div class="block-content">
		<form class="form form-default" id="blog_search_mini_form" action="<?php echo $block->getFormUrl() ?>" method="get">
            <div class="tt-form-search">
                <input id="blog_search" type="text" name="q" value="<?php echo $block->escapeHtml($block->getQuery()) ?>" placeholder="<?php echo __('Search posts here...') ?>" class="input-text form-control" maxlength="128" role="combobox" aria-haspopup="false" aria-autocomplete="both" autocomplete="off">
